// - layout.pug
doctype html
html(lang='de') 
	block link
		-var selected = 'Startseite';
	//-var menu = { 'Startseite': '/', 'Zimmer': '/zimmer','Umgebung': '/umgebung', 'Buchen': '/buchen', 'Gästebuch': '/guestbook'};
	-var menu = { 'Startseite': '/', 'Zimmer': '/zimmer', 'Buchen': '/buchen', 'Gästebuch': '/guestbook'};
	head
		meta(name="viewport" content="width=device-width, initial-scale=1")
		title #{title} - Pension Biewer Ockfen
		link(href='/static/css/style.css', rel='stylesheet')
		link(href='/static/css/bootstrap.min.css', rel='stylesheet')
		link(href='/static/css/font-awesome.min.css', rel='stylesheet')
		link(href='/static/css/ekko-lightbox.css', rel='stylesheet')
		link(href='/static/css/cookieconsent.min.css', rel='stylesheet')

		block head
	body
		.mynav
			nav.navbar.navbar-expand-md.navbar-dark
				.container
					.navbar-brand
						i.fa.fa-star
						i.fa.fa-star
						i.fa.fa-star
						i.fa.fa-star
					a.navbar-brand(href="/") #{owner.name}
					button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation") 
						span.navbar-toggler-icon
					.collapse.navbar-collapse#navbar
						ul.navbar-nav
							each val, key in menu
								if selected === key
									li.nav-item.active
										a.nav-link(href=val)=key
								else
									li.nav-item
										a.nav-link(href=val)=key
		main.container
			block content
				if title == "Startseite"
					h1 #{title} 
						small.text-muted 4-Sterne Pension Biewer
				else
					h1 #{title}
			block footer
			footer.footer.card.card-body.text-center.top3
				p.my-auto #[a(href="/impressum") Impressum] - #[a(href="/datenschutz") Datenschutz] - #[a(href="/login") Intern]
				p.my-auto Design von #[a(href=author.site) #{author.name}]
				p.my-auto &copy; #{site.currentYear} #[a(href=owner.site) #{owner.name}]
		script(src="/static/js/jquery.slim.min.js")
		script(src="/static/js/popper.min.js")
		script(src="/static/js/bootstrap.min.js")
		script(src="/static/js/ekko-lightbox.js")
		script(src="/static/js/cookieconsent.min.js")
		script(src="/static/js/main.js")
		block scripts
